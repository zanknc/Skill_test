                    </div>
                    <div class="col-sm-4">
                        <label for="txtDepartment" class="mb-0">Department</label>
                        @Html.TextBox("txtDepartment", null, new { @class = "form-control form-control-sm shadow-sm", placeholder = "Department..", id = "txtDepartment", @readonly = "readonly" })
                    </div>
                    <div class="col-sm-4">
                        <label for="txtSection" class="mb-0">Section</label>
                        @Html.TextBox("txtSection", null, new { @class = "form-control form-control-sm shadow-sm", placeholder = "Section..", id = "txtSection", @readonly = "readonly" })
