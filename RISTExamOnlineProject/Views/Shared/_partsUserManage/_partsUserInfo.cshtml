                        @Html.TextBox("txtEmail", null, new { @class = "form-control form-control-sm shadow-sm", placeholder = "Email..", id = "txtEmail", @readonly = "readonly" })
                    </div>
                    <div class="col-sm-4">
                        <label for="txtEmail2" class="mb-0">Secondary email</label>
                        @Html.TextBox("txtEmail2", null, new { @class = "form-control form-control-sm shadow-sm", placeholder = "Email..", id = "txtEmail2", @readonly = "readonly" })
                    </div>
                    <div class="col-sm-2">
                        <label for="txtAuthority" class="mb-0">Authority</label>
                        @Html.TextBox("txtAuthority", null, new { @class = "form-control form-control-sm shadow-sm", placeholder = "Authority..", id = "txtAuthority", @readonly = "readonly" })
