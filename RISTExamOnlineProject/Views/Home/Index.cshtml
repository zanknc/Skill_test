                        };
                        var doughnutPieOptions = {
                            responsive: true,
                            animation: {
                                animateScale: true,
                                animateRotate: true
                            }
                        };

                        if ($("#doughnutChart_License").length) {
                            var doughnutChartCanvas = $("#doughnutChart_License").get(0).getContext("2d");
